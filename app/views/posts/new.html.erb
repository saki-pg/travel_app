<div class="container-fiuld room-new">
    <div class="col-md-10 room-view">
      <div class="room-view-box">

        <h2>ルーム情報登録</h2>

          <%= form_with model: @room, local: true do |f| %>
            <table>
                <tr>
                    <th><%= f.label :room_name,"ルーム名",class:"col-md-3 required-a" %></th>
                    <td><%= f.text_field :room_name,placeholder:"ルーム名を入力", class:"form-control col-md-9 mb-4" %></td>
                </tr>

                <tr>
                    <th><%= f.label :room_introduction,"ルーム紹介",class:"col-md-3 required-a" %></th>
                    <td><%= f.text_area :room_introduction,placeholder:"ルーム紹介を入力", class:"form-control col-md-9 mb-4" %></td>
                </tr>

                <tr>
                    <th><%= f.label :price,"料金",class:"col-md-3 required-a" %></th>
                    <td><%= f.number_field :price,placeholder:"一日あたりの料金を入力", class:"form-control mb-4 col-md-9" %></td>
                </tr>

                <tr>
                    <th><%= f.label :address,"住所",class:"col-md-3 required-a" %></th>
                    <td><%= f.text_field :address,placeholder:"住所を入力", class:"form-control mb-4 col-md-9" %></td>
                </tr>

                <tr>
                    <th><%= f.label :room_image,"ルーム画像",class:"col-md-3 required-a" %></th>
                    <td><%= f.file_field :room_image, class:"mb-4 col-md-9" %></td>
                </tr>
            </table>

            <div class="row">
              <%= f.submit "登録" ,class:"col-md-2 btn btn-primary mx-3"%>
            </div>

          <% end %>

      </div>
    </div>
</div>

