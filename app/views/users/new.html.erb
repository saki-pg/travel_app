<h3>新しいアカウントを作成</h3>

<% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>


<%= form_with model: @user do |f| %>
   <table>
     <tr>
       <th><%= f.label :name ,"名前" %></th>
       <td><%= f.text_field :name %></td>
     </tr>

     <tr>
       <th><%= f.label :email ,"メールアドレス" %></th>
       <td><%= f.text_field :email %></td>
     </tr>

     <tr>
       <th><%= f.label :passwords ,"パスワード" %></th>
       <td><%= f.password_field :passwords %></td>
     </tr>

     <tr>
       <th><%= f.label :passwords_confirmation ,"パスワード確認" %></th>
       <td><%= f.password_field :passwords_confirmation %></td>
     </tr>
   </table>

   <div>
     <ul>
       <li><%= f.submit "新しいアカウントを作成"%></li>
       <li><%= link_to "すでにアカウントをお持ちの方はログイン", :login %></li>
     </ul>
   </div>
<% end %>

